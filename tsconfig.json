{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {
            "react": [
                "../node_modules/react/",
                "../node_modules/@types/react/"
            ],
            "react/*": [
                "../node_modules/react/*",
                "../node_modules/@types/react/*"
            ]
        },
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "removeComments": true,
        "noImplicitAny": false,
        "preserveConstEnums": true
    },
    "include": [
        "src"
    ]
}